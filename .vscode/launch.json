    "version": "0.2.0",
    "configurations": [
        {
            "name": "App Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "untzine.py",
            "cwd": "${workspaceFolder}/app",
            "args": ["${workspaceFolder}/configuration.json"],
            "console": "integratedTerminal"
        },
        {
            "name": "Current file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}/app",
            "console": "integratedTerminal"
        },
    ]
}